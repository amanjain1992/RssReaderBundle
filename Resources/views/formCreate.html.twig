{% form_theme form 'ClarolineCoreBundle::form_theme.html.twig' %}
{% if isDesktop == false %}
{% set isDesktop = 0 %}
{% endif %}
{% if isDefault == false %}
{% set isDefault = 0 %}
{% endif %}
<form class="form-horizontal" id="rss-reader-form"
      action="{{ path('claro_rss_config_create', {'workspaceId': workspaceId, 'isDesktop':isDesktop, 'isDefault':isDefault, 'userId':userId}) }} "
      method="post" {{ form_enctype(form) }}
>
    <div class="panel-body">
        {{ form_widget(form) }}
    </div>
    <div class="panel-footer">
        <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
        <a href="{{ path('claro_admin_widgets') }}">
            <button type="button" class="btn btn-default">{{ 'cancel'|trans({}, 'platform') }}</button>
        </a>
    </div>
</form>
